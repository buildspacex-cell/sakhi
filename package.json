{
  "private": true,
  "name": "sakhi",
  "workspaces": [
    "apps/*",
    "backend/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "cd backend/fastapi && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:mobile": "cd apps/mobile && expo start --web",
    "dev:web": "pnpm --filter web dev",
    "dev": "pnpm -w run dev:api & pnpm -w run dev:mobile"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "expo-av": "~16.0.7"
  },
  "pnpm": {
    "overrides": {
      "@babel/core": "^7.23.9",
      "@babel/plugin-transform-react-jsx": "^7.23.4",
      "@babel/preset-typescript": "^7.24.7"
    }
  }
}
